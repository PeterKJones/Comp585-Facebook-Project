<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ComboBox?>

<?import javafx.scene.control.RadioButton?>
<GridPane fx:id="profileGridPane" fx:controller="Scenes.FXMLProfileController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="5"
          vgap="5" minWidth="400" minHeight="10000">
    <padding><Insets top="10" right="10" bottom="10" left="10"/> </padding>
    <Text fx:id="firstName" text="First Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="fNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Text fx:id="lastName" text="Last Name:"
          GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="lNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Text fx:id="age" text="Age:"
          GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="ageBox" promptText="choose"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <fx:define>
        <ToggleGroup fx:id="genderGroup"/>
    </fx:define>
    <RadioButton fx:id="genderMale" text="Male" toggleGroup="$genderGroup"
          GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <RadioButton fx:id="genderFemale" text="Female" toggleGroup="$genderGroup"
          GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Text fx:id="location" text="Location:"
          GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="locationField"
               GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Text fx:id="education" text="Level of Education:"
          GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="levelOfEduBox" promptText="choose"
              GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Text fx:id="aboutMe" text="About Me:"
          GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="aboutMeField"
               GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Text fx:id="profileImage" text="Profile Picture:"
          GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Button fx:id="browseButton" text="Browse"
            GridPane.columnIndex="1" GridPane.rowIndex="7"
            onAction="#handleBrowseButton"/>

    <Button fx:id="confirmButton" text="Confirm"
            GridPane.columnIndex="1" GridPane.rowIndex="8"
            onAction="#handleConfirmButton"/>

</GridPane>

